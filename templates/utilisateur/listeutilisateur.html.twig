{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste des Utilisateur{% endblock %}

{% block body %}

<div class="row justify-content-center">
    <div class="col-6 bg-white p-4 m-0 text-primary">
        <div class="table-responsive">
                    <table class="table caption-top">
                        <caption>Modifer des Utilisateur de Share</caption>
                        <thead>
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Prenom</th>
                                <th scope="col">DateNaissance</th>
                                <th scope="col">DateInscription</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for utilisateur in utilisateurs %}
                                <tr class="{{cycle(['table-primary','table-secondary'],loop.index0) }}">
                                    <td>{{utilisateur.nom | capitalize }}</td>
                                    <td>{{utilisateur.prenom}}</td>
                                    <td>{{utilisateur.dateNaissance | date("d-m-Y") }}</td>
                                    <td>{{utilisateur.dateInscription | date("d-m-Y Ã  H:i:s") }}</td>
                                    <td><a href="{{path('modifutilisateur', {'id':utilisateur.id})}}"><i class="bi bi-brush text-white"></i></a></td>
                                    <td><a href="{{path('listeutilisateur', {'id':utilisateur.id})}}"><i class="bi bi-trash text-white"></i></a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>