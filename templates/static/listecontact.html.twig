{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Contact{% endblock %}

{% block body %}
<h1 class="text-secondary text-center">Liste des Conctact de Share</h1>

<div class="table-responsive">
    <table class="table-hover">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Message</th>
                <th scope="col">Sujet</th>
                <th scope="col">Message</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr class="{{cycle(['table-primary','table-secondary'],loop.index0) }}">
                    <td>{{contact.nom | capitalize }}</td>
                    <td>{{contact.email}}</td>
                    <td>{{contact.sujet | capitalize }}</td>
                    <td>{{contact.message}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}