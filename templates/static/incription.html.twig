{% extends 'base.html.twig' %}

{% block title %}{{parent()}}incription{% endblock %}

{% block body %}
div class="container-fluid">

    <h1 class="text-primary text-center m-2 text-white">Inscrivez vous</h1>
    <div class="row justify-content-center">
        <div class="col-6 bg-white p-4 m-0 text-primary">
            {{form_start(form)}}
            <div class="form-group">
                {{ form_label(form.nom, 'Votre Nom', {'label_attr': {'class': 'fw-bold m-1'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control m-1'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prenom, 'Votre prenom', {'label_attr': {'class': 'fw-bold m-1'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control m-1'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.dateNaissance, '', {'label_attr': {'class': 'fw-bold m-1'}}) }}
                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control m-1'}}) }}
            </div>
            <div class="form-group mx-auto text-center">
                {{ form_widget(form.envoyer, { 'label': "Modifier", 'attr': {'class': 'btn fw-bold bg-primary text-white mx-auto text-center m-4'}}) }}
                
            </div>
                {{form_end(form)}}
        </div>
              
    </div>
{% endblock %}
